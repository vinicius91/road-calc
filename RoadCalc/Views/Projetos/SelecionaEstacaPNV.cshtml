@model RoadCalc.Models.Entities.Estaca

<div class="modal-dialog">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">Ponto Notável Vertical(PNV)</h4>
        </div>
        <div class="modal-body">
            <p>Selecione a estaca para adicionar um Ponto Notável Vertical</p>
            <div class="form-horizontal col-lg-12" style="margin-top: 30px; margin-bottom: 20px">
                @using (Ajax.BeginForm("AdicionaPNV", new AjaxOptions {UpdateTargetId = "ModificaEstaca", HttpMethod = "POST", InsertionMode = InsertionMode.Replace}))
                {

                    <div class="form-group">
                        @Html.LabelFor(model => model.Id, "Selecione a Estaca", htmlAttributes: new {@class = "col-md-4"})
                        <div class="col-md-6">
                            @Html.DropDownList("Id", null, htmlAttributes: new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.Id, "", new {@class = "text-danger"})
                        </div>
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-success form-control">Buscar</button>
                        </div>
                    </div>

                }
            </div>
            <div id="ModificaEstaca">
                <p>...</p>
            </div>
                <div class="modal-footer">

                
            </div>
            
        </div>

    </div>

    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->


