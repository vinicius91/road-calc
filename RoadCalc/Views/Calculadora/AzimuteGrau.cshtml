@model RoadCalc.Models.ViewModels.DistGrau
<hr />
<p>
    <b>Azimute entre dois pontos - Grau, Minuto e Segundo</b>
</p>
<hr />
<!--INICIO DO FORMULÁRIO-->
@using (Ajax.BeginForm("CalculaAzimuteGrau", new AjaxOptions { UpdateTargetId = "CalculaAzimuteGrau", HttpMethod = "POST", InsertionMode = InsertionMode.Replace }))
{
    <div class="box-body">
        <div class="row">
            <h4>Ponto 1</h4>
            <div class="col-lg-6">
                <h5>Eixo X</h5>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt1Graus)
                    @Html.TextBoxFor(x => x.CoordXPt1Graus, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt1Min)
                    @Html.TextBoxFor(x => x.CoordXPt1Min, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt1Seg)
                    @Html.TextBoxFor(x => x.CoordXPt1Seg, new { @class = "form-control", type = "number", step = 0.01 })
                </div>
            </div>
            <div class="col-lg-6">
                <h5>Eixo Y</h5>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt1Graus)
                    @Html.TextBoxFor(x => x.CoordYPt1Graus, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt1Min)
                    @Html.TextBoxFor(x => x.CoordYPt1Min, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt1Seg)
                    @Html.TextBoxFor(x => x.CoordYPt1Seg, new { @class = "form-control", type = "number", step = 0.01 })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <h4>Ponto 2</h4>
            <div class="col-lg-6">
                <h5>Eixo X</h5>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt2Graus)
                    @Html.TextBoxFor(x => x.CoordXPt2Graus, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt2Min)
                    @Html.TextBoxFor(x => x.CoordXPt2Min, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordXPt2Seg)
                    @Html.TextBoxFor(x => x.CoordXPt2Seg, new { @class = "form-control", type = "number", step = 0.01 })
                </div>
            </div>
            <div class="col-lg-6">
                <h5>Eixo Y</h5>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt2Graus)
                    @Html.TextBoxFor(x => x.CoordYPt2Graus, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt2Min)
                    @Html.TextBoxFor(x => x.CoordYPt2Min, new { @class = "form-control", type = "number", step = 1 })
                </div>
                <div class="form-group col-lg-2">
                    @Html.LabelFor(x => x.CoordYPt2Seg)
                    @Html.TextBoxFor(x => x.CoordYPt2Seg, new { @class = "form-control", type = "number", step = 0.01 })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-group col-lg-4">
                <button type="submit" class="btn btn-primary form-control">Calcular</button>
            </div>

        </div>
    </div>
    <!-- /.box-body -->

}
<!--TÉRMINO DO FORMULÁRIO-->
<div class="box-footer">
    <div id="CalculaAzimuteGrau">

    </div>
</div>
