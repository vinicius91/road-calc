
@{
    ViewBag.Title = "Azimute";
}

<div class="row">
    <div class="col-md-12">
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class=""><a href="#AzDoisPontos" data-toggle="tab" aria-expanded="true">Azimute entre dois pontos</a></li>

            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="AzDoisPontos">
                    <p>
                        <b>Escolha o tipo de unidade</b>
                    </p>
                    <div class="box-body">
                        <div class="col-lg-3">
                            @Ajax.ActionLink("Decimal", "AzimuteDecimal", new { id = 1 },
                                new AjaxOptions { UpdateTargetId = "AzdoisPontosContent", HttpMethod = "POST", InsertionMode = InsertionMode.Replace },
                                new { @class = "btn btn-default form-control" }
                                )
                        </div>
                        <div class="col-lg-3">
                            @Ajax.ActionLink("Grau, Minuto e Segundo", "AzimuteGrau", new { id = 1 },
                                new AjaxOptions { UpdateTargetId = "AzdoisPontosContent", HttpMethod = "POST", InsertionMode = InsertionMode.Replace },
                                new { @class = "btn btn-default form-control" })
                        </div>
                    </div>

                    <div id="AzdoisPontosContent"></div>

                </div>
                

            </div>

        </div>
    </div>
</div>